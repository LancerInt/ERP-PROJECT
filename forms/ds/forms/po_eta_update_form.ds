form po_eta_update
{
	displayname = "PO ETA Update (Anticipated Arrival)"
	success message = "PO ETA Update (Anticipated Arrival) added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	must have update_id
	(
		type = autonumber
		displayname = "Update ID"
		row = 1
		column = 1
		width = medium
		start index = 1
	)

	must have po
	(
		type = lookup
		displayname = "PO"
		row = 1
		column = 1
		width = medium
		related form = purchase_order
	)

	must have update_date
	(
		type = datetime
		displayname = "Update Date"
		row = 1
		column = 1
		width = medium
	)

	must have updated_by
	(
		type = lookup
		displayname = "Updated By"
		row = 1
		column = 1
		width = medium
		related form = stakeholder_user
	)

	must have expected_arrival_date
	(
		type = date
		displayname = "Expected Arrival Date"
		row = 1
		column = 1
		width = medium
	)

	must have status
	(
		type = picklist
		displayname = "Status"
		row = 1
		column = 1
		width = medium
	)

	remarks
	(
		type = textarea
		displayname = "Remarks"
		row = 1
		column = 1
		width = medium
		height = 100px
	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
