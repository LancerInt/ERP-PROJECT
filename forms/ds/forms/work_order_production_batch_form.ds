		(
			type = text
			displayname = "Batch ID"
			width = medium
		)

		must have quantity_produced
		(
			type = number
			displayname = "Quantity Produced"
			width = medium
		)

		must have uom
		(
			type = picklist
			displayname = "UOM"
			width = medium
		)

		must have purity
		(
			type = number
			displayname = "Purity %"
			width = medium
		)

		must have ai_content
		(
			type = number
			displayname = "AI Content"
			width = medium
		)

		must have qc_status
		(
			type = picklist
			displayname = "QC Status"
			width = medium
		)

	)

