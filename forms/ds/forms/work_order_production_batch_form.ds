		(
			type = textarea
			displayname = "Description"
			width = medium
			height = 100px
		)

		quantity_lost
		(
			type = number
			displayname = "Quantity Lost"
			width = medium
		)

		uom
		(
			type = picklist
			displayname = "UOM"
			width = medium
		)

		handling_action
		(
			type = picklist
			displayname = "Handling Action"
			width = medium
		)

	)

	qc_request
	(
		type = lookup
		displayname = "QC Request"
		row = 1
		column = 1
		width = medium
		related form = qc_request
	)

	wage_method
	(
		type = picklist
		displayname = "Wage Method"
		row = 1
		column = 1
		width = medium
	)

	wage_vouchers
	(
		type = grid
		displayname = "Wage Vouchers"
		row = 1
		column = 1
		width = medium
		must have wage_voucher
		(
			type = lookup
			displayname = "Wage Voucher"
			width = medium
			related form = wage_voucher
		)

		must have amount
		(
			type = INR
			displayname = "Amount"
			width = medium
		)

	)

	yield_log_reference
	(
		type = lookup
		displayname = "Yield Log Reference"
		row = 1
		column = 1
		width = medium
		related form = production_yield_log
	)

	rework_flag
	(
		type = checkbox
		displayname = "Rework Flag"
		row = 1
		column = 1
		width = medium
	)

	parent_batch
	(
		type = lookup
		displayname = "Parent Batch"
		row = 1
		column = 1
		width = medium
		related form = work_order_production_batch
	)

	notes
	(
		type = textarea
		displayname = "Notes"
		row = 1
		column = 1
		width = medium
		height = 100px
	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
