form work_order_production_batch
{
	displayname = "Work Order / Production Batch"
	success message = "Work Order / Production Batch added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	must have batch_id
	(
		type = autonumber
		displayname = "Batch ID"
		row = 1
		column = 1
		width = medium
		start index = 1
	)

	must have work_order_no
	(
		type = text
		displayname = "Work Order No."
		row = 1
		column = 1
		width = medium
	)

	must have warehouse
	(
		type = lookup
		displayname = "Warehouse"
		row = 1
		column = 1
		width = medium
		related form = warehouse
	)

	must have production_template
	(
		type = lookup
		displayname = "Production Template"
		row = 1
		column = 1
		width = medium
		related form = template_library
	)

	must have template_revision
	(
		type = number
		displayname = "Template Revision"
		row = 1
		column = 1
		width = medium
	)

	linked_sales_order
	(
		type = lookup
		displayname = "Linked Sales Order"
		row = 1
		column = 1
		width = medium
		related form = sales_order
	)

	linked_dispatch_challan
	(
		type = lookup
		displayname = "Linked Dispatch Challan"
		row = 1
		column = 1
		width = medium
		related form = dispatch_challan
	)

	must have planned_start_date
	(
		type = date
		displayname = "Planned Start Date"
		row = 1
		column = 1
		width = medium
	)

	planned_end_date
	(
		type = date
		displayname = "Planned End Date"
		row = 1
		column = 1
		width = medium
	)

	actual_start_date
	(
		type = date
		displayname = "Actual Start Date"
		row = 1
		column = 1
		width = medium
	)

	actual_end_date
	(
		type = date
		displayname = "Actual End Date"
		row = 1
		column = 1
		width = medium
	)

	must have stage_status
	(
		type = picklist
		displayname = "Stage Status"
		row = 1
		column = 1
		width = medium
	)

	must have input_consumption
	(
		type = grid
		displayname = "Input Consumption"
		row = 1
		column = 1
		width = medium
		must have product
		(
			type = lookup
			displayname = "Product"
			width = medium
			related form = product_master
		)

		must have planned_qty
		(
			type = number
			displayname = "Planned Qty"
			width = medium
		)

		must have actual_qty
		(
			type = number
			displayname = "Actual Qty"
			width = medium
		)

		must have uom
		(
			type = picklist
			displayname = "UOM"
			width = medium
		)

		must have batch_used
		(
			type = text
			displayname = "Batch Used"
			width = medium
		)

		must have godown
		(
			type = lookup
			displayname = "Godown"
			width = medium
			related form = godown
		)

		yield_loss
		(
			type = number
			displayname = "Yield Loss %"
			width = medium
		)

	)

	must have output_products
	(
		type = grid
		displayname = "Output Products"
		row = 1
		column = 1
		width = medium
		must have product
		(
			type = lookup
			displayname = "Product"
			width = medium
			related form = product_master
		)

