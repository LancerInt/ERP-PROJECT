form quote_evaluation
{
	displayname = "Quote Evaluation"
	success message = "Quote Evaluation added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	must have evaluation_id
	(
		type = autonumber
		displayname = "Evaluation ID"
		row = 1
		column = 1
		width = medium
		start index = 1
	)

	must have rfq
	(
		type = lookup
		displayname = "RFQ"
		row = 1
		column = 1
		width = medium
		related form = rfq_header
	)

	must have evaluation_date
	(
		type = date
		displayname = "Evaluation Date"
		row = 1
		column = 1
		width = medium
	)

	must have evaluated_by
	(
		type = lookup
		displayname = "Evaluated By"
		row = 1
		column = 1
		width = medium
		related form = stakeholder_user
	)

	must have comparison_table
	(
		type = grid
		displayname = "Comparison Table"
		row = 1
		column = 1
		width = medium
		must have vendor
		(
			type = lookup
			displayname = "Vendor"
			width = medium
			related form = vendor
		)

		must have total_cost
		(
			type = INR
			displayname = "Total Cost"
			width = medium
		)

		lead_time
		(
			type = number
			displayname = "Lead Time"
			width = medium
		)

		freight_terms
		(
			type = picklist
			displayname = "Freight Terms"
			width = medium
		)

		payment_terms
		(
			type = picklist
			displayname = "Payment Terms"
			width = medium
		)

		score
		(
			type = number
			displayname = "Score"
			width = medium
		)

		remarks
		(
			type = textarea
			displayname = "Remarks"
			width = medium
			height = 100px
		)

	)

	best_quote_flag
	(
		type = checkbox
		displayname = "Best Quote Flag"
		row = 1
		column = 1
		width = medium
	)

	recommended_vendor
	(
		type = lookup
		displayname = "Recommended Vendor"
		row = 1
		column = 1
		width = medium
		related form = vendor
	)

	must have justification_notes
	(
		type = textarea
		displayname = "Justification Notes"
		row = 1
		column = 1
		width = medium
		height = 100px
	)

	must have approval_status
	(
		type = picklist
		displayname = "Approval Status"
		row = 1
		column = 1
		width = medium
	)

	approval_trail
	(
		type = grid
		displayname = "Approval Trail"
		row = 1
		column = 1
		width = medium
		must have action
		(
			type = picklist
			displayname = "Action"
			width = medium
		)

		must have actor
		(
			type = lookup
			displayname = "Actor"
			width = medium
			related form = stakeholder_user
		)

		must have action_date
		(
			type = datetime
			displayname = "Action Date"
			width = medium
		)

		remarks
		(
			type = textarea
			displayname = "Remarks"
			width = medium
			height = 100px
		)

	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
