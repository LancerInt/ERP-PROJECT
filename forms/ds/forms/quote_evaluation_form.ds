// Module: 2. Purchase Module
form quote_evaluation
{
    DisplayName = "Quote Evaluation";
    LinkName = "quote_evaluation";
    Module = "2. Purchase Module";
    Type = "Form";

    Sections
    {
        Section main
        {
            DisplayName = "Main";
            Layout = "OneColumn";
            Fields
            {
                Field evaluation_id
                {
                    DisplayName = "Evaluation ID";
                    LinkName = "evaluation_id";
                    Type = "AutoNumber";
                    IsMandatory = true;
                }
                Field rfq
                {
                    DisplayName = "RFQ";
                    LinkName = "rfq";
                    Type = "Lookup";
                    IsMandatory = true;
                    RelatedFormLinkName = "rfq_header";
                }
                Field evaluation_date
                {
                    DisplayName = "Evaluation Date";
                    LinkName = "evaluation_date";
                    Type = "Date";
                    IsMandatory = true;
                }
                Field evaluated_by
                {
                    DisplayName = "Evaluated By";
                    LinkName = "evaluated_by";
                    Type = "Lookup";
                    IsMandatory = true;
                    RelatedFormLinkName = "stakeholder_user";
                }
                Field comparison_table
                {
                    DisplayName = "Comparison Table";
                    LinkName = "comparison_table";
                    Type = "SubForm";
                    IsMandatory = true;
                    SubFormLinkName = "comparison_table";
                    HelpText = "Vendor comparisons";
                }
                Field best_quote_flag
                {
                    DisplayName = "Best Quote Flag";
                    LinkName = "best_quote_flag";
                    Type = "Checkbox";
                }
                Field recommended_vendor
                {
                    DisplayName = "Recommended Vendor";
                    LinkName = "recommended_vendor";
                    Type = "Lookup";
                    RelatedFormLinkName = "vendor";
                }
                Field justification_notes
                {
                    DisplayName = "Justification Notes";
                    LinkName = "justification_notes";
                    Type = "MultiLine";
                    ConditionalMandatory = true;
                    HelpText = "Mandatory when best quote not chosen";
                }
                Field approval_status
                {
                    DisplayName = "Approval Status";
                    LinkName = "approval_status";
                    Type = "Dropdown";
                    IsMandatory = true;
                    HelpText = "Pending / Approved / Rejected";
                }
                Field approval_trail
                {
                    DisplayName = "Approval Trail";
                    LinkName = "approval_trail";
                    Type = "SubForm";
                    SubFormLinkName = "approval_trail";
                    HelpText = "Purchase Manager approval";
                }
            }
        }
    }

    Actions
    {
        on add
        {
        }
        on edit
        {
        }
