form quote_evaluation
{
	displayname = "Quote Evaluation"
	success message = "Quote Evaluation added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	must have evaluation_id
	(
		type = autonumber
		displayname = "Evaluation ID"
		start index = 1
		row = 1
		column = 1
		width = medium
	)

	must have evaluation_date
	(
		type = date
		displayname = "Evaluation Date"
		row = 1
		column = 1
		width = medium
	)

	must have comparison_table
	(
		type = grid
		displayname = "Comparison Table"
		must have total_cost
		(
			type = INR
			displayname = "Total Cost"
			width = medium
		)

		lead_time
		(
			type = number
			displayname = "Lead Time"
			width = medium
		)

		freight_terms
		(
			type = picklist
			displayname = "Freight Terms"
			maxchar = 100
			values = {"Option 1","Option 2","Option 3"}
			width = medium
		)

		payment_terms
		(
			type = picklist
			displayname = "Payment Terms"
			maxchar = 100
			values = {"Option 1","Option 2","Option 3"}
			width = medium
		)

		score
		(
			type = number
			displayname = "Score"
			width = medium
		)

		remarks
		(
			type = textarea
			displayname = "Remarks"
			height = 100px
			width = medium
		)

		row = 1
		column = 1
		width = medium
	)

	best_quote_flag
	(
		type = checkbox
		displayname = "Best Quote Flag"
		row = 1
		column = 1
		width = medium
	)

	must have justification_notes
	(
		type = textarea
		displayname = "Justification Notes"
		height = 100px
		row = 1
		column = 1
		width = medium
	)

	must have approval_status
	(
		type = picklist
		displayname = "Approval Status"
		maxchar = 100
		values = {"Pending","Approved","Rejected"}
		row = 1
		column = 1
		width = medium
	)

	approval_trail
	(
		type = grid
		displayname = "Approval Trail"
		must have action
		(
			type = picklist
			displayname = "Action"
			maxchar = 100
			values = {"Approved","Rejected","Partial"}
			width = medium
		)

		must have action_date
		(
			type = datetime
			displayname = "Action Date"
			width = medium
		)

		remarks
		(
			type = textarea
			displayname = "Remarks"
			height = 100px
			width = medium
		)

		row = 1
		column = 1
		width = medium
	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
