form freight_details
{
	displayname = "Freight Details"
	success message = "Freight Details added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	must have freight_type
	(
		type = picklist
		displayname = "Freight Type"
		maxchar = 100
		values = {"Local Drayage","Linehaul"}
		row = 1
		column = 1
		width = medium
	)

	must have freight_terms
	(
		type = picklist
		displayname = "Freight Terms"
		maxchar = 100
		values = {"Paid","To_Pay","Mixed"}
		row = 1
		column = 1
		width = medium
	)

	tentative_charge
	(
		type = INR
		displayname = "Tentative Charge"
		row = 1
		column = 1
		width = medium
	)

	discount
	(
		type = INR
		displayname = "Discount"
		row = 1
		column = 1
		width = medium
	)

	must have payable_by
	(
		type = picklist
		displayname = "Payable By"
		maxchar = 100
		values = {"Company","Vendor"}
		row = 1
		column = 1
		width = medium
	)

	quantity_basis
	(
		type = number
		displayname = "Quantity Basis"
		row = 1
		column = 1
		width = medium
	)

	quantity_uom
	(
		type = picklist
		displayname = "Quantity UOM"
		maxchar = 100
		values = {"Tonnes","KG","KL","Units"}
		row = 1
		column = 1
		width = medium
	)

	destination_state
	(
		type = picklist
		displayname = "Destination State"
		maxchar = 100
		values = {"Option 1","Option 2","Option 3"}
		row = 1
		column = 1
		width = medium
	)

	cost_per_unit_calc
	(
		type = number
		displayname = "Cost Per Unit (Calc)"
		is formula = true
		row = 1
		column = 1
		width = medium
	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
