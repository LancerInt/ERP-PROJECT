form company
{
	displayname = "Company"
	success message = "Company added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	must have company_code
	(
		type = text
		displayname = "Company Code"
		row = 1
		column = 1
		width = medium
		is unique = true
	)

	must have legal_name
	(
		type = text
		displayname = "Legal Name"
		row = 1
		column = 1
		width = medium
	)

	trade_name
	(
		type = text
		displayname = "Trade Name"
		row = 1
		column = 1
		width = medium
	)

	must have gstin
	(
		type = text
		displayname = "GSTIN"
		row = 1
		column = 1
		width = medium
	)

	pan
	(
		type = text
		displayname = "PAN"
		row = 1
		column = 1
		width = medium
	)

	cin
	(
		type = text
		displayname = "CIN"
		row = 1
		column = 1
		width = medium
	)

	must have registered_address
	(
		type = address
		displayname = "Registered Address"
		row = 1
		column = 1
		width = medium
		capture_coordinates = true
		adjust_using_map = false
		personal data = true
		address_line_1
		(
			type = address_line_1
			displayname = "Address Line 1"
		)

		address_line_2
		(
			type = address_line_2
			displayname = "Address Line 2"
		)

		district_city
		(
			type = district_city
			displayname = "City / District"
		)

		state_province
		(
			type = state_province
			displayname = "State / Province"
		)

		postal_code
		(
			type = postal_code
			displayname = "Postal Code"
		)

		country
		(
			type = country
			displayname = "Country"
		)

		latitude
		(
			type = latitude
			displayname = "Latitude"
			visibility = false
		)

		longitude
		(
			type = longitude
			displayname = "Longitude"
			visibility = false
		)
	)

	must have billing_address
	(
		type = address
		displayname = "Billing Address"
		row = 1
		column = 1
		width = medium
		capture_coordinates = true
		adjust_using_map = false
		personal data = true
		address_line_1
		(
			type = address_line_1
			displayname = "Address Line 1"
		)

		address_line_2
		(
			type = address_line_2
			displayname = "Address Line 2"
		)

		district_city
		(
			type = district_city
			displayname = "City / District"
		)

		state_province
		(
			type = state_province
			displayname = "State / Province"
		)

		postal_code
		(
			type = postal_code
			displayname = "Postal Code"
		)

		country
		(
			type = country
			displayname = "Country"
		)

		latitude
		(
			type = latitude
			displayname = "Latitude"
			visibility = false
		)

		longitude
		(
			type = longitude
			displayname = "Longitude"
			visibility = false
		)
	)

	contact_email
	(
		type = email
		displayname = "Contact Email"
		row = 1
		column = 1
		width = medium
		personal data = true
	)

	contact_phone
	(
		type = phonenumber
		displayname = "Contact Phone"
		row = 1
		column = 1
		width = medium
		personal data = true
	)

	must have default_currency
	(
		type = picklist
		displayname = "Default Currency"
		row = 1
		column = 1
		width = medium
	)

	books_export_flag
	(
		type = checkbox
		displayname = "Books Export Flag"
		row = 1
		column = 1
		width = medium
	)

	must have active_from
	(
		type = date
		displayname = "Active From"
		row = 1
		column = 1
		width = medium
	)

	active_to
	(
		type = date
		displayname = "Active To"
		row = 1
		column = 1
		width = medium
	)

	notes
	(
		type = textarea
		displayname = "Notes"
		row = 1
		column = 1
		width = medium
		height = 100px
	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
