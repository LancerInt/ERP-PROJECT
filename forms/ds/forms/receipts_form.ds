form receipts
{
	displayname = "Receipts"
	success message = "Receipts added successfully"

	Section
	(
		type = section
		row = 1
		column = 0
		width = medium
	)

	receipt_no
	(
		type = autonumber
		displayname = "Receipt No."
		start index = 1
		row = 1
		column = 1
		width = medium
	)

	must have receipt_date
	(
		type = date
		displayname = "Receipt Date"
		row = 1
		column = 1
		width = medium
	)

	must have amount
	(
		type = INR
		displayname = "Amount"
		row = 1
		column = 1
		width = medium
	)

	must have payment_method
	(
		type = picklist
		displayname = "Payment Method"
		values = {"Bank Transfer","Cash","Cheque","UPI"}
		maxchar = 100
		row = 1
		column = 1
		width = medium
	)

	notes
	(
		type = textarea
		displayname = "Notes"
		height = 100px
		row = 1
		column = 1
		width = medium
	)

	actions
	{
		on add
		{
			submit
			(
				type = submit
				displayname = "Submit"
			)
			reset
			(
				type = reset
				displayname = "Reset"
			)
		}
		on edit
		{
			update
			(
				type = submit
				displayname = "Update"
			)
			cancel
			(
				type = cancel
				displayname = "Cancel"
			)
		}
	}
}
